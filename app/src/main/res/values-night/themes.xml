<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseThemeMaterial" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorPrimaryInverse">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="colorTertiary">@color/black</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/black</item>
        <item name="colorOnTertiaryContainer">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/MyStyle</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>
        <item name="chipStyle">@style/MyChipStyle</item>
        <item name="android:textViewStyle">@style/MyTextView</item>
    </style>



</resources>