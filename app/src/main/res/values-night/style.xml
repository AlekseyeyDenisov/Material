<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/aladin</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/padding_start_base</item>
        <item name="android:paddingEnd">@dimen/padding_end_base</item>
    </style>

    <style name="TextViewTitle" parent="Base.Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/andada</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">

    </style>
    <style name="MyStyleFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="MyStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="helperTextEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="helperText">@color/black</item>

        <item name="helperTextTextColor">@color/black</item>
        <item name="counterTextColor">@color/black</item>
        <item name="counterOverflowTextColor">@color/green</item>

        <item name="prefixTextColor">@color/black</item>

        <item name="endIconTint">@color/black</item>

        <item name="backgroundTintMode">@color/black</item>

        <item name="suffixTextColor">@color/black</item>

        <item name="boxStrokeColor">@color/red</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/red</item>


        <item name="errorTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>

    </style>
</resources>